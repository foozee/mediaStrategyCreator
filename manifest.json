{
  "manifest_version": 2,
  "name" : "BeardedSpice MediaStrategy Creator",
  "version": "0.0.1",
  "description" : "Makes creating a BeardedSpice MediaStrategy for any website just a matter of a couple of clicks!",
  "icons" : {
    "128" : "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background" : {
    "scripts" : ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon128.png"
  }
}